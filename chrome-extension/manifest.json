{
	"manifest_version": 3,
	"name": "Bere-Voice-To-Text",
	"version": "1.0.0",
	"description": "Talk to Bere Voice-To-Text through your microphone and hear its responses with a voice. Uses speech recognition and text-to-speech technologies",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {              
		  "16": "images/icon-16.png",
		  "32": "images/icon-32.png"
		},
		"default_title": "Talk-to-ChatGPT V2.6.1"
	},
	"content_scripts":[
		{
			"matches":[
				"https://*/*",
				"file:///*"				
			],
			"js": ["jquery.min.js", "fontawesome.min.js", "content.js"]
		}
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	}
}